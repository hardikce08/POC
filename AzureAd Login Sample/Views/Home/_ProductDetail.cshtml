@model  List<POC.DataAccess.Model.ProductDetail>
@if (Model.Count > 0)
{
    <div>
        <table class="table table-condensed table-bordered" id="tblProductDetail">
            <caption>Observation Details</caption>
            <thead>
                <tr>
                    <th>Observation Name</th>
                    <th>Measured Unit</th>
                    <th>Measured Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ObservationDescription</td>
                        <td>@item.Unit</td>
                        <td>@item.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
   <div style="text-align: center; color: red; font-weight: bold;">
       No Records Found for this Product
   </div>
}