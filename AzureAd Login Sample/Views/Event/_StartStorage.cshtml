

<style>
    .control-label {
        text-align: left !important;
    }
</style>
@if (ViewBag.Error != null)
{
    <div class="alert alert-error" style="font-weight:bold;color:red;">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h4>@ViewBag.Error </h4>
    </div>
}
<div class="row" id="dvTransferofOwnership">
    <div class="col-md-12">
        <div class="col-md-4">
            <label class="col-md-8 control-label">Store Location</label>
            <div class="col-md-12">
                @Html.TextBox("Model.StoreLocation", "", new { @class = "form-control", @style = "width:100%;" })
            </div>
        </div>
        <div class="col-md-4">
            <label class="col-md-8 control-label">Weight to be stored</label>
            <div class="col-md-12">
                @Html.TextBox("Model.WeightTobestored", "", new { @class = "form-control", @style = "width:100%;" })
            </div>
        </div>
        <div class="col-md-4">
            <label class="col-md-8 control-label">UoM</label>
            <div class="col-md-12">
                @Html.DropDownList("Model.UoM", (IEnumerable<SelectListItem>)
                      ViewBag.UoM,
                      htmlAttributes: new { @class = "form-control", @style = "width:100%;", data_placeholder = "-- ALL--" })
            </div>
        </div>
    </div>
    <div class="col-md-12" style="margin-top:10px;"></div>
    <div class="col-md-12 row">
        <div class="col-md-6">
            <label class="col-md-4 control-label"> </label>
            <div class="col-md-8">
                <button type="button" id="btnClose" class="btn btn-black" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-orange" id="btnSaveStartStore">Save <i class="icon-disk bigger-110"></i></button>
            </div>
        </div>

    </div>
    <input type="hidden" id="hdnlatitude" name="hdnlatitude" />
    <input type="hidden" id="hdnlongitude" name="hdnlongitude" />
    <input type="hidden" id="hdnStoreEventType" name="hdnStoreEventType" value="@ViewBag.StorageEventType" />
</div>

<script>

    $("#btnSaveStartStore").click(function () {
    //alert($('#model_ContractRequest_receiver').val());
    $.ajax({
    type: "POST",
    url: '@Url.Action("SaveStartStorage", "Event")',
        data: { EventType: $('#hdnStoreEventType').val(), address: $('#Model_StoreLocation').val(), id: $('#hdnProductId').val(), latitude: $('#hdnlatitude').val(), longitude: $('#hdnlongitude').val(), weightUnit: $('#Model_UoM').val(), weightValue: $('#Model_WeightTobestored').val()},
    success: function (data) {
        Swal.fire({
        position: 'top-end',
        icon: 'success',
        title: 'New Event Added',
        showConfirmButton: false,
        timer: 1500
        })
        setTimeout(function () {
        location.reload();
        }, 1500);
        }
        });
    });

</script>
